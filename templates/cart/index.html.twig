{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Panier</h1>

    {% if cart is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                </tr>
            </thead>
            <tbody>
                {% for id, item in cart %}
                    <tr>
                        <td>{{ item.productName }}</td>
                        <td>{{ item.unitPrice }} €</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.unitPrice * item.quantity }} €</td>
                        <td>
                    <a href="{{ path('cart_increase', {id: id}) }}" class="btn btn-sm btn-success">+</a>
                    <a href="{{ path('cart_decrease', {id: id}) }}" class="btn btn-sm btn-warning">-</a>
                </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total :</th>
                    <th>{{ total|number_format(2) }} €</th>
                </tr>
            </tfoot>

        </table>
            <div class="d-flex justify-content-end mt-4">
                <a href="{{ path('cart_clear') }}" class="btn btn-danger">Vider le panier</a>
                <a href="{{ path('order_checkout') }}" class="btn btn-success">Valider le panier</a>


</div>

    {% endif %}
</div>
{% endblock %}
