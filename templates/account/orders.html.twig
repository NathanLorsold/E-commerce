{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mes commandes</h1>

    {% if orders is empty %}
        <div class="alert alert-info">Vous n'avez passé aucune commande pour le moment.</div>
    {% else %}
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Référence</th>
                    <th>Date</th>
                    <th>Montant</th>
                    <th>Statut</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.reference }}</td>
                        <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ order.total }} €</td>
                        <td>{{ order.status }}</td>
                        <td>
                            <a href="{{ path('order_confirmation', { reference: order.reference }) }}" class="btn btn-sm btn-outline-primary">
                                Voir
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
